{
  "directories": {
    "data": {
      "train": "./data/train",
      "test": "./data/test",
      "val": "./data/val",
      "play_data": "./data/play_data",
      "play_data_output": "./data/play_data/output",
      "stage_data": "./data/stage_data"
    },
    "models": "./models"
  },
  "model": {
    "name": "unet",
    "path": "./models/best_psnr_model.pth"
  },
  "training": {
    "epochs": 24,
    "batch_size": 2,
    "accumulation_steps": 1,
    "learning_rate": 0.001,
    "weight_decay": 0.001,
    "early_stopping_patience": 8,
    "step_decrease_interval": 8,
    "img_height": 1920,
    "img_width": 1280

  },
  "scheduler": {
    "type": "ReduceLROnPlateau",
    "params": {
      "mode": "max",
      "factor": 0.5,
      "patience": 5,
      "verbose": true
    }
  },
  "augmentation": {
    "color_jitter": {
      "enabled": false,
      "p": 0.25,
      "brightness": 0.2,
      "contrast": 0.2,
      "saturation": 0.2,
      "hue": 0.1
    }
  }
  
}
